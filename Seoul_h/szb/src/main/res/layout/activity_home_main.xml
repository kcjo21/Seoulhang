<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.szb.szb.Home.Home_Main"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="25dp">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@drawable/title"
        android:minHeight="50dp"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/runing"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:contentDescription=""
        app:layout_constraintBottom_toTopOf="@+id/drawer_layout"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="@+id/toolbar"
        app:layout_constraintRight_toLeftOf="@+id/title_text"
        app:layout_constraintTop_toTopOf="@+id/toolbar"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@android:color/background_light"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/title_text"
        android:layout_width="60dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toTopOf="@+id/drawer_layout"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintLeft_toLeftOf="@+id/toolbar"
        app:layout_constraintRight_toRightOf="@+id/toolbar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/title_text_home"
        tools:ignore="ContentDescription" />

    <android.support.v4.widget.DrawerLayout
        android:id="@+id/drawer_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintVertical_bias="0.0"
        tools:context=".start_pack.MainActivity">


        <android.support.constraint.ConstraintLayout
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v4.view.ViewPager
                android:id="@+id/viewpager"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toTopOf="@+id/tap_bar"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"></android.support.v4.view.ViewPager>

            <android.support.constraint.ConstraintLayout
                android:id="@+id/tap_bar"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:background="@drawable/tapbar"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent">

                <ImageView
                    android:id="@+id/bt_home"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentLeft="false"
                    android:layout_alignParentStart="false"
                    android:layout_marginEnd="25dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/bt_quiz"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.6"
                    app:srcCompat="@drawable/selector_home"
                    tools:ignore="ContentDescription,RtlHardcoded" />

                <ImageView
                    android:id="@+id/bt_quiz"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="25dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/bt_rank"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/selector_quiz"
                    tools:ignore="ContentDescription" />

                <ImageView
                    android:id="@+id/bt_rank"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/selector_rank"
                    tools:ignore="ContentDescription"
                    app:layout_constraintHorizontal_bias="0.498"
                    app:layout_constraintVertical_bias="0.6" />

                <ImageView
                    android:id="@+id/bt_info"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="false"
                    android:layout_alignParentRight="false"
                    android:layout_centerVertical="false"
                    android:layout_marginStart="25dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/bt_rank"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/selector_info"
                    tools:ignore="ContentDescription,RtlHardcoded" />

                <ImageView
                    android:id="@+id/bt_map"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="25dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/bt_info"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@color/BRONZE" />

            </android.support.constraint.ConstraintLayout>

        </android.support.constraint.ConstraintLayout>

        <LinearLayout
            android:id="@+id/side_menu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:weightSum="100">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="90"
                android:background="@android:color/background_light"
                android:orientation="vertical"
                android:weightSum="100"
                tools:ignore="UselessParent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="80"
                    android:background="@android:color/background_light"
                    android:orientation="vertical"
                    android:weightSum="100"
                    tools:ignore="NestedWeights">

                    <LinearLayout
                        android:id="@+id/info_setting_lay"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="8"
                        android:background="@drawable/border_side"
                        android:clickable="true"
                        android:gravity="center_vertical|center_horizontal"
                        android:orientation="horizontal"
                        android:weightSum="100"
                        tools:ignore="RtlHardcoded">

                        <TextView
                            android:id="@+id/info_setting"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="100"
                            android:background="@drawable/text_edit_profile"
                            android:gravity="left|center_vertical|center_horizontal"
                            android:text="@string/내정보설정"
                            android:textColor="@android:color/black"
                            android:textColorLink="@android:color/black"
                            android:textSize="14dp"
                            tools:ignore="HardcodedText,NestedWeights,RtlHardcoded,SpUsage" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/info_lay"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="49"
                        android:clickable="true"
                        android:orientation="vertical"
                        android:weightSum="100">

                        <TextView
                            android:id="@+id/player_name"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="20"
                            android:background="@drawable/text_name"
                            android:gravity="center_vertical"
                            android:textColor="@android:color/black"
                            android:textSize="14dp"
                            tools:ignore="HardcodedText,SpUsage" />

                        <TextView
                            android:id="@+id/player_grade"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="20"
                            android:background="@drawable/text_grade"
                            android:gravity="center_vertical"
                            android:textColor="@android:color/black"
                            android:textSize="14dp"
                            tools:ignore="HardcodedText,SpUsage" />

                        <TextView
                            android:id="@+id/hint_left"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="20"
                            android:background="@drawable/text_hint"
                            android:gravity="center_vertical"
                            android:textColor="@android:color/black"
                            android:textSize="14dp"
                            tools:ignore="HardcodedText,SpUsage" />

                        <TextView
                            android:id="@+id/player_point_home"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="20"
                            android:background="@drawable/text_point"
                            android:gravity="center_vertical"
                            android:textColor="@android:color/black"
                            android:textSize="14dp"
                            tools:ignore="HardcodedText,SpUsage" />

                        <TextView
                            android:id="@+id/border"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="20"
                            android:background="@color/BLUE"
                            android:gravity="center_vertical"
                            android:textColor="@color/BLUE"
                            android:textSize="14dp"
                            tools:ignore="SpUsage" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/boder_1"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="@color/Carkviewline"
                        android:clickable="true"
                        android:orientation="vertical"></LinearLayout>

                    <TextView
                        android:id="@+id/move_home"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="10"
                        android:background="@drawable/side_home_selector"
                        android:clickable="true"
                        android:gravity="center_vertical"
                        android:text="@string/홈으로가기"
                        android:textColor="@android:color/black"
                        android:textSize="14dp"
                        tools:ignore="HardcodedText,SpUsage" />

                    <TextView
                        android:id="@+id/camera_on"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="10"
                        android:background="@drawable/side_camera_selector"
                        android:clickable="true"
                        android:gravity="center_vertical"
                        android:text="@string/카메라켜기"
                        android:textColor="@android:color/black"
                        android:textSize="14dp"
                        tools:ignore="HardcodedText,SpUsage" />

                    <LinearLayout
                        android:id="@+id/boder_2"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="@color/Carkviewline"
                        android:clickable="true"
                        android:orientation="vertical"></LinearLayout>

                    <TextView
                        android:id="@+id/grade_chart"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="10"
                        android:background="@drawable/side_grade_selector"
                        android:clickable="true"
                        android:gravity="center_vertical"
                        android:text="@string/등급표"
                        android:textColor="@android:color/black"
                        android:textSize="14dp"
                        tools:ignore="HardcodedText,SpUsage" />

                    <TextView
                        android:id="@+id/setting"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="10"
                        android:background="@drawable/side_setting_selector"
                        android:clickable="true"
                        android:gravity="center_vertical"
                        android:text="@string/설정"
                        android:textColor="@android:color/black"
                        android:textSize="14dp"
                        tools:ignore="HardcodedText,SpUsage" />

                    <LinearLayout
                        android:id="@+id/boder_3"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="@color/Carkviewline"
                        android:clickable="true"
                        android:orientation="vertical"></LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="20"
                    android:background="@color/BLUE"
                    android:baselineAligned="false"
                    android:clickable="true"
                    android:orientation="horizontal"
                    android:weightSum="100">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="50"
                        android:orientation="horizontal"
                        tools:ignore="UselessLeaf"></LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="50"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/logos"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/subtitle"
                            tools:ignore="ContentDescription,InefficientWeight,NestedWeights" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </android.support.v4.widget.DrawerLayout>


</android.support.constraint.ConstraintLayout>
