<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/back"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:layout_margin="10dp"
    android:orientation="vertical"
    android:weightSum="100">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <android.support.v7.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_margin="2dp"
            android:layout_weight="90"
            android:background="@android:color/holo_blue_bright"
            android:backgroundTint="@color/cardview_light_background"
            android:elevation="0dp"
            android:outlineProvider="background"
            card:cardBackgroundColor="@color/Green00cc66"
            card:cardCornerRadius="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="100">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="30"
                    android:orientation="vertical"
                    android:weightSum="100">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="30"
                        android:orientation="horizontal"
                        android:weightSum="100">

                        <TextView
                            android:id="@+id/quiz_num"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="30"
                            android:background="@drawable/border_tap"
                            android:gravity="center_vertical|center_horizontal"
                            android:text="TextView"
                            android:textAlignment="center"
                            android:textColor="@android:color/black"
                            android:textSize="18dp"
                            android:textStyle="bold|italic" />

                        <TextView
                            android:id="@+id/quiz_region"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="70"
                            android:background="@drawable/border_tap"
                            android:gravity="center_vertical|center_horizontal"
                            android:text="TextView"
                            android:textColor="@android:color/black"
                            android:textSize="18dp" />

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/quiz_image"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="70"
                        android:background="@drawable/border_tap"
                        card:srcCompat="@drawable/app_icon" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="70"
                    android:orientation="vertical"
                    android:weightSum="100">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="80"
                        android:orientation="vertical"
                        android:weightSum="100">

                        <TextView
                            android:id="@+id/quiz"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="80"
                            android:background="@drawable/border_tap"
                            android:gravity="left|center_vertical"
                            android:scrollbars="vertical"
                            android:text="TextView"
                            android:textAlignment="center"
                            android:textColor="@android:color/black"
                            android:textSize="20dp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:id="@+id/hint_lay"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="20"
                            android:orientation="horizontal"
                            android:weightSum="100">

                            <Button
                                android:id="@+id/button_hint"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="right"
                                android:layout_weight="30"
                                android:background="@drawable/hint_button_selector"
                                android:foregroundGravity="right"
                                android:textSize="10dp" />

                            <TextView
                                android:id="@+id/hint_text"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="100"
                                android:scrollbars="vertical"
                                android:textSize="14dp"
                                android:visibility="gone" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="20"
                        android:background="@drawable/border_tap"
                        android:gravity="right"
                        android:orientation="horizontal"
                        android:weightSum="100">

                        <EditText
                            android:id="@+id/Answer"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="74"
                            android:background="@null"
                            android:ems="10"
                            android:hint="@string/정답을입력하세요"
                            android:inputType="textPersonName"
                            android:textColor="@android:color/black"
                            android:textSize="16dp" />

                        <Button
                            android:id="@+id/Submit"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="25"
                            android:background="@drawable/answer_button_selector"
                            android:textSize="16dp" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:background="@color/cardview_light_background"
        android:orientation="horizontal"></LinearLayout>

</LinearLayout>
