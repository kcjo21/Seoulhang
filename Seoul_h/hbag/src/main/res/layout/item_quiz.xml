<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/back"
    android:layout_width="match_parent"
    android:layout_height="215dp"
    android:layout_margin="10dp"
    android:background="@drawable/card_view_round"
    android:orientation="vertical"
    android:weightSum="100">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="3dp"
        android:layout_weight="90"
        android:elevation="0dp"
        android:outlineProvider="background"
        card:cardCornerRadius="10dp"
        tools:ignore="InefficientWeight,ObsoleteLayoutParam,RtlHardcoded">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="100"
            tools:ignore="DisableBaselineAlignment">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="30"
                android:orientation="vertical"
                android:weightSum="100">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="30"
                    android:orientation="horizontal"
                    android:weightSum="100"
                    tools:ignore="NestedWeights">

                    <TextView
                        android:id="@+id/quiz_num"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="30"
                        android:background="@drawable/border_tap"
                        android:gravity="center_vertical|center_horizontal"
                        android:textAlignment="center"
                        android:textColor="@android:color/black"
                        android:textSize="14dp"
                        android:textStyle="bold|italic"
                        tools:ignore="HardcodedText,SpUsage" />

                    <TextView
                        android:id="@+id/quiz_region"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="70"
                        android:background="@drawable/border_tap"
                        android:gravity="center_vertical|center_horizontal"
                        android:textColor="@android:color/black"
                        android:textSize="16dp"
                        tools:ignore="HardcodedText,SpUsage" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/quiz_image"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="70"
                    android:background="@drawable/border_tap"
                    card:srcCompat="@drawable/app_icon"
                    tools:ignore="ContentDescription" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="70"
                android:orientation="vertical"
                android:weightSum="100">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="80"
                    android:orientation="vertical"
                    android:weightSum="100"
                    tools:ignore="NestedWeights">

                    <TextView
                        android:id="@+id/quiz"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="80"
                        android:background="@drawable/border_tap"
                        android:gravity="left|center_vertical"
                        android:scrollbars="vertical"
                        android:textAlignment="center"
                        android:textColor="@android:color/black"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText,SpUsage" />

                    <LinearLayout
                        android:id="@+id/hint_lay"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="20"
                        android:orientation="horizontal"
                        android:weightSum="100">

                        <Button
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="right"
                            android:layout_weight="25"
                            android:background="@drawable/hint_button_selector"
                            android:foregroundGravity="right"
                            android:textSize="10dp"
                            tools:ignore="SpUsage" />

                        <TextView
                            android:id="@+id/hint_text"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="100"
                            android:scrollbars="vertical"
                            android:textSize="14dp"
                            android:visibility="gone"
                            tools:ignore="SpUsage" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="20"
                    android:background="@drawable/border_tap"
                    android:gravity="right"
                    android:orientation="horizontal"
                    android:weightSum="100">

                    <RadioGroup
                        android:id="@+id/Answer_ox"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="74"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <RadioButton
                            android:id="@+id/rd_o"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical|center_horizontal"
                            android:text="O "
                            android:textColor="@android:color/black"
                            tools:ignore="HardcodedText" />

                        <RadioButton
                            android:id="@+id/rd_x"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical|center_horizontal"
                            android:text="X "
                            android:textColor="@android:color/black"
                            tools:ignore="HardcodedText" />
                    </RadioGroup>

                    <EditText
                        android:id="@+id/Answer"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="74"
                        android:background="@null"
                        android:ems="10"
                        android:hint="@string/정답을입력하세요"
                        android:inputType="textPersonName"
                        android:textColor="@android:color/black"
                        android:textSize="16dp"
                        tools:ignore="SpUsage" />

                    <Button
                        android:id="@+id/Submit"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="25"
                        android:background="@drawable/answer_button_selector"
                        android:textSize="16dp"
                        tools:ignore="SpUsage" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
