<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parents"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@color/white"
        app:cardCornerRadius="10dp">

        <ImageView
            android:id="@+id/iv_topback"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            app:srcCompat="@color/BLUE"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/tv_region"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="1dp"
            android:layout_toEndOf="@+id/tv_top"
            android:background="@drawable/card_view_button"
            android:gravity="center_vertical|center_horizontal"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="10sp"
            tools:ignore="HardcodedText,SmallSp,SpUsage" />

    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/tv_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_num"
        android:layout_alignBottom="@+id/tv_num"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="2dp"
        android:gravity="center_vertical|center_horizontal"
        android:text=" 강화도 "
        android:textColor="@android:color/black"
        android:textSize="10sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText,SmallSp,SpUsage" />

    <TextView
        android:id="@+id/tv_visit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_top"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="2dp"
        android:text="방문자수"
        android:textColor="@color/cardview_dark_background"
        android:textSize="8sp"
        tools:ignore="HardcodedText,SmallSp,SpUsage" />

    <TextView
        android:id="@+id/tv_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/cardView2"
        android:layout_below="@+id/cardView2"
        android:layout_toEndOf="@+id/tv_top"
        android:text="1002"
        android:textColor="@color/SBLUE"
        android:textSize="10sp"
        tools:ignore="HardcodedText,SmallSp" />

</RelativeLayout>