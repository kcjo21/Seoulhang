<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    tools:context="com.hbag.seoulhang.joinmanage_package.register_package.EditprofileActivity">

    <TextView
        android:id="@+id/title_normal"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:gravity="center_vertical|start"
        android:text="@string/정보수정"
        android:textColor="@android:color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpUsage" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:background="@drawable/setting_back_xm"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_normal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:weightSum="120"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="25"
                android:orientation="vertical"
                android:theme="@style/AppTheme.NoActionBar"
                android:weightSum="100">

                <TextView
                    android:id="@+id/id"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_weight="50"
                    android:text="@string/id"
                    android:textColor="@color/SBLUE"
                    android:textSize="14dp"
                    tools:ignore="NestedWeights,SpUsage" />

                <TextView
                    android:id="@+id/id_t"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="50"
                    android:maxLines="1"
                    android:textColor="@android:color/black"
                    android:textSize="14dp"
                    tools:ignore="SpUsage" />
            </LinearLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginEnd="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="25"
                android:theme="@style/AppTheme.NoActionBar">

                <EditText
                    android:id="@+id/password_t"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/비밀번호"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:textSize="14dp"
                    tools:ignore="SpUsage" />
            </android.support.design.widget.TextInputLayout>

            <Button
                android:id="@+id/bt_change_pass"
                android:layout_width="100dp"
                android:layout_height="0dp"
                android:layout_gravity="end"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="10"
                android:background="@drawable/card_view_button"
                android:text="@string/비밀번호변경"
                android:textColor="@color/white"
                android:textSize="7dp"
                tools:ignore="SpUsage" />

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="25"
                android:theme="@style/AppTheme.NoActionBar">

                <EditText
                    android:id="@+id/name_t"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/닉네임"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textSize="14dp"
                    tools:ignore="SpUsage" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="25"
                android:theme="@style/AppTheme.NoActionBar">

                <EditText
                    android:id="@+id/email_t"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/email"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:textSize="14dp"
                    tools:ignore="SpUsage" />
            </android.support.design.widget.TextInputLayout>

            <Button
                android:id="@+id/bt_Withdrawal"
                android:layout_width="100dp"
                android:layout_height="0dp"
                android:layout_gravity="end"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="8"
                android:background="@drawable/card_view_button"
                android:text="@string/회원탈퇴"
                android:textColor="@color/white"
                android:textSize="10dp"
                tools:ignore="RtlHardcoded,SpUsage"
                tools:targetApi="lollipop" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

            <Button
                android:id="@+id/cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="20dp"
                android:layout_marginEnd="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_weight="10"
                android:background="@drawable/card_view_button"
                android:backgroundTintMode="src_atop"
                android:text="@string/취소"
                android:textColor="@color/white"
                android:textSize="14dp"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="@+id/eng_1"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/eng_1"
                app:layout_constraintVertical_bias="0.285"
                tools:ignore="ButtonOrder,ButtonStyle,HardcodedText,RtlHardcoded,SpUsage"
                tools:targetApi="lollipop" />

            <Button
                android:id="@+id/commit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="20dp"
                android:layout_marginEnd="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_weight="10"
                android:background="@drawable/card_view_button"
                android:backgroundTintMode="src_atop"
                android:text="@string/확인"
                android:textColor="@color/white"
                android:textSize="14dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintVertical_bias="0.285"
                tools:ignore="ButtonStyle,HardcodedText,SpUsage"
                tools:targetApi="lollipop" />

        </LinearLayout>

    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>
