<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_light_background"
    android:orientation="vertical"
    android:weightSum="100"
    tools:context="com.hbag.seoulhang.joinmanage_package.TutorialActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10">

        <Button
            android:id="@+id/button4"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:text="Button"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/skip_b"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="end"
            android:text="Button"
            tools:ignore="HardcodedText" />
    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/tutovp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="80"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"></android.support.v4.view.ViewPager>

    <LinearLayout
        android:id="@+id/indi"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="horizontal"
        android:weightSum="100">

        <ImageView
            android:id="@+id/vp1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:scaleType="center"
            android:scaleX="0.5"
            android:scaleY="0.5"
            app:srcCompat="@drawable/selector_indicator"
            tools:ignore="ContentDescription,NestedWeights" />

        <ImageView
            android:id="@+id/vp2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:scaleType="center"
            android:scaleX="0.5"
            android:scaleY="0.5"
            app:srcCompat="@drawable/selector_indicator"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/vp3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:scaleType="center"
            android:scaleX="0.5"
            android:scaleY="0.5"
            app:srcCompat="@drawable/selector_indicator"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/vp4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:scaleType="center"
            android:scaleX="0.5"
            android:scaleY="0.5"
            app:srcCompat="@drawable/selector_indicator"
            tools:ignore="ContentDescription" />

    </LinearLayout>


</LinearLayout>
