<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_light_background"
    android:orientation="vertical"
    android:overScrollMode="always"
    android:weightSum="100">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="100"
        android:orientation="vertical"
        android:weightSum="100"
        tools:ignore="UselessParent">

        <LinearLayout
            android:id="@+id/border1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/Carkviewline"
            android:orientation="horizontal"
            tools:ignore="DuplicateIds,NestedWeights"></LinearLayout>

        <LinearLayout
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="43"
            android:background="@drawable/border_tap"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:weightSum="100">

            <LinearLayout
                android:id="@+id/left"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="30"
                android:orientation="vertical"
                android:weightSum="100"
                tools:ignore="NestedWeights">

                <LinearLayout
                    android:id="@+id/l_top"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="1dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="1dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="70"
                    android:orientation="vertical"
                    tools:ignore="NestedWeights,RtlHardcoded">

                    <ImageView
                        android:id="@+id/mapview"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="100"
                        android:clickable="true"
                        android:contentDescription=""
                        android:scaleType="fitXY"
                        app:srcCompat="@drawable/selector_map_image"
                        tools:ignore="ContentDescription,NestedWeights" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/l_bottom"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="1dp"
                    android:layout_marginTop="1dp"
                    android:layout_weight="30"
                    android:orientation="vertical"
                    tools:ignore="RtlHardcoded">

                    <ImageView
                        android:id="@+id/tutorial_b"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="100"
                        android:clickable="true"
                        android:scaleType="fitXY"
                        app:srcCompat="@drawable/selector_help"
                        tools:ignore="ContentDescription" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/right"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="70"
                android:orientation="vertical"
                android:weightSum="100">

                <LinearLayout
                    android:id="@+id/r_top"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="1dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="70"
                    android:orientation="horizontal"
                    tools:ignore="NestedWeights,RtlHardcoded">

                    <ImageView
                        android:id="@+id/cameraon_b"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="100"
                        android:clickable="true"
                        android:contentDescription=""
                        android:scaleType="fitXY"
                        app:srcCompat="@drawable/selector_camera"
                        tools:ignore="ContentDescription,NestedWeights,Suspicious0dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/r_bottom"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="1dp"
                    android:layout_weight="30"
                    android:orientation="horizontal"
                    android:weightSum="100"
                    tools:ignore="RtlHardcoded">

                    <ImageView
                        android:id="@+id/subwayview"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="100"
                        android:clickable="true"
                        android:scaleType="fitXY"
                        app:srcCompat="@drawable/selector_subway"
                        tools:ignore="ContentDescription,NestedWeights" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/border3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/Carkviewline"
            android:orientation="horizontal"></LinearLayout>

        <TextView
            android:id="@+id/top_10"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="5"
            android:gravity="center_vertical"
            android:text="@string/최근문제"
            android:textColor="@android:color/black"
            android:textSize="14dp"
            tools:ignore="RtlHardcoded,SpUsage" />

        <LinearLayout
            android:id="@+id/bottom"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="50"
            android:background="@color/white"
            android:gravity="top"
            android:orientation="vertical"
            android:weightSum="100">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/home_rev"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="75"
                android:nestedScrollingEnabled="true"
                android:orientation="horizontal"
                android:visibility="visible" />

            <LinearLayout
                android:id="@+id/border4"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/Carkviewline"
                android:orientation="horizontal"></LinearLayout>

            <TextView
                android:id="@+id/tv_alert"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginStart="10dp"
                android:layout_weight="10"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:text="@string/Notice"
                android:textColor="@android:color/black" />

            <android.support.v4.view.ViewPager
                android:id="@+id/vp_notice"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="14"
                android:gravity="center_vertical|center_horizontal"
                android:text="TextView"
                android:textColor="@drawable/border_side" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>