<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:weightSum="100">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="2dp"
        android:layout_weight="4.5"
        android:background="@color/SBLUE"
        android:orientation="horizontal"
        android:weightSum="100">

        <TextView
            android:id="@+id/grade"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="15"
            android:gravity="center"
            android:text="@string/등급"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="14dp"
            tools:ignore="NestedWeights,SpUsage" />

        <TextView
            android:id="@+id/playernick"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="40"
            android:gravity="center"
            android:text="@string/닉네임"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="14dp"
            tools:ignore="SpUsage" />

        <TextView
            android:id="@+id/point"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:gravity="center"
            android:text="@string/점수"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="14dp"
            tools:ignore="SpUsage" />

        <TextView
            android:id="@+id/hint"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:gravity="center"
            android:text="@string/남은힌트"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="14dp"
            tools:ignore="SpUsage" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="2dp"
        android:layout_weight="8"
        android:background="@drawable/p_tapbar"
        android:orientation="horizontal"
        android:weightSum="100">

        <ImageView
            android:id="@+id/info_grade"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="15"
            android:gravity="center_vertical|center_horizontal"
            android:scaleType="fitCenter"
            android:textColor="@android:color/black"
            android:textSize="14dp"
            tools:ignore="ContentDescription,NestedWeights,SpUsage" />

        <TextView
            android:id="@+id/info_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="40"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="@android:color/black"
            android:textSize="14dp"
            tools:ignore="SpUsage" />

        <TextView
            android:id="@+id/info_point"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="@android:color/black"
            android:textSize="14dp"
            tools:ignore="SpUsage" />

        <TextView
            android:id="@+id/info_hint"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="@android:color/black"
            android:textSize="14dp"
            tools:ignore="SpUsage" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:background="@color/Carkviewline"
        android:orientation="horizontal"></LinearLayout>

    <ExpandableListView
        android:id="@+id/exl"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:layout_weight="86"
        android:divider="@android:color/white"
        android:groupIndicator="@drawable/selector_arrow"
        android:overScrollMode="always"
        android:scrollbars="none" />

</LinearLayout>